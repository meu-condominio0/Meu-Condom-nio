FROM python:3.12-slim

# ðŸŸ¢ DependÃªncias obrigatÃ³rias para bcrypt, mysqlclient e passlib
RUN apt-get update && apt-get install -y \
    build-essential \
    libffi-dev \
    python3-dev \
    default-libmysqlclient-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Garante que o wait_for_db.py tem permissÃ£o
RUN chmod +x app/wait_for_db.py

EXPOSE 8000

# EXECUTAR wait_for_db.py antes do backend
CMD ["sh", "-c", "python3 app/wait_for_db.py && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"]
