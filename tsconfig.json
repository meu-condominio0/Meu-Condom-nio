{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "noEmit": true,
    "types": [
      "@types/react",
      "@types/react-dom",
      "@testing-library/jest-dom",
      "vite/client",
      "vitest"
    ]
  },
  "include": ["src", "components", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "backend", ]
}
