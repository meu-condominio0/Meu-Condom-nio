{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
   "types": ["vite/client", "node"],

    /* --- ADD THESE TWO LINES --- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
    /* --------------------------- */
    
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "backend"]
}