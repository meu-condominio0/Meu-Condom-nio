{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2023",
      "DOM"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "@testing-library/jest-dom",
      "vite/client",
      "vitest"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/ui/*": [
        "Marketing Screens Package/src/components/ui/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "components/marketing/**/*.ts",
    "components/marketing/**/*.tsx",
    "components/marketing/**/*.d.ts",
    "components/home/**/*.ts",
    "components/home/**/*.tsx",
    "components/**/*.d.ts",
    "vitest.config.ts",
    "vite.config.ts",
    "react.d.ts",
    "next-themes.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "backend",
    "components/paginas",
    "components/paginas/**/*",
    "src/pages/HomeNew.tsx"
  ]
}
